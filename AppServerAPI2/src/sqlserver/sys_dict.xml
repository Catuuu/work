<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC
        "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="sys_dict">
    <select id="getRecordList" resultType="CdsOptions">
        <![CDATA[
            select * from cds_options
        ]]>
    </select>


    <select id="getRecordList2" parameterType="Map" resultType="CdsOrderInfo">
        <![CDATA[
            select top 100 o.stores_id,s.name,o.create_date,o.receiver_lat,o.receiver_lng,o.receiver_name,o.receiver_adress,o.order_id
            from cds_order_info o
            left join cds_stores s on o.stores_id = s.stores_id
            where  o.in_time>'2017-02-01'
            and o.send_name='点我达'
            and o.distance is null
        ]]>
    </select>


    <select id="getRecord" parameterType="CdsOptions" resultType="CdsOptions">
        <![CDATA[
          select * from cds_options where option_name=#{option_name}
        ]]>
    </select>

    <insert id="insertRecord" parameterType="CdsOptions">
        <![CDATA[
            INSERT INTO sys_dict(
                sd_key,
                sd_val,
                sd_remark,
                sd_ismodify
            ) VALUES(
                #{sd_key},
                #{sd_val},
                #{sd_remark},
                #{sd_ismodify}
            )
        ]]>
    </insert>

    <update id="updateRecord" parameterType="CdsOptions">
        <![CDATA[
            UPDATE sys_dict
            SET
            sd_val = #{sd_val},
            sd_remark = #{sd_remark}
            WHERE sd_key = #{sd_key}
        ]]>
    </update>

    <delete id="deleteRecord" parameterType="CdsOptions">
        <![CDATA[ DELETE FROM sys_dict WHERE sd_key = #{sd_key} ]]>
    </delete>

</mapper>