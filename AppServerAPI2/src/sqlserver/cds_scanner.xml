<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC
        "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cds_scanner">
    <!--用户管理分页数据查询-->
    <select id="getPageRecord" parameterType="PageParam" resultType="HashMap">
        <![CDATA[
            select s.name,sc.* from cds_scanner sc
            left join cds_stores s on sc.stores_id = s.stores_id
        ]]>
        <if test="formInfo.stores_id != null and formInfo.stores_id != '' ">
            where sc.stores_id = #{formInfo.stores_id}
        </if>
    </select>
</mapper>