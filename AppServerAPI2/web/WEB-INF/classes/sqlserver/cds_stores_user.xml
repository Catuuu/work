<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC
        "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cds_stores_user">
    <!--获取用户角色信息-->
    <select id="getRole" parameterType="Integer" resultType="HashMap">
        <![CDATA[
            select * from cds_role r
            left join cds_role_user ru on r.id = ru.role_id
            where ru.user_id = #{user_id} and r.id in (4,2)
        ]]>
    </select>
</mapper>